<%= form_for @event, :url => {:controller => 'events', :action => 'update'} do |f| %>
    <%= f.label :name, 'Name' %>
    <%= f.text_field :name %>

    <%= f.label :is_public, 'Is public' %>
    <%= f.radio_button :is_public, 'Yes' %>
    <%= f.radio_button :is_public, 'No' %>
    <%= f.submit 'Create' %>
<% end %>